        <servlet-name>InitServlet</servlet-name>
        <url-pattern>/InitServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>group2</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>
