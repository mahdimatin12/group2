        <servlet-class>com.controller.Step2Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Step3Servlet</servlet-name>
        <servlet-class>com.controller.Step3Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditServlet</servlet-name>
        <servlet-class>com.controller.EditServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditBookingServlet</servlet-name>
